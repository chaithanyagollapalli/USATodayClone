<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usatoday">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.USATODAY">
        <activity android:name=".views.activities.SearchArticleActivity"></activity>
        <activity android:name=".views.activities.SearchActivity" />
        <activity android:name=".views.activities.ArticleActivity" />
        <activity android:name=".views.activities.SettingActivity" />
        <activity android:name=".views.activities.MainActivity" />
        <activity android:name=".views.activities.VideosActivity"></activity>
        <activity android:name=".views.activities.MyTopicsFilterActivity" />
        <activity android:name=".views.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>